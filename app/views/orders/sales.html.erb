<div class="center">
  <h1> Your Sales Request History </h1>
</div>

<table class="table table-bordered table table-striped">
  <tr>
    <th class= "center">Image</th>
    <th class= "center">Item Detail</th>
    <th class= "center">Message</th>
    <th class= "center">Customer</th>
    <th class= "center">Date sold</th>
  </tr>

  <% @orders.each do |order| %>
      <tr>
        <td> <%= cl_image_tag(order.listing.image_url(:thumbnail)) %></td>  
        <td><p>Title: <%= order.listing.name %> </p><br>  <p> Sold for: <%= number_to_currency(order.listing.price) %></p>  <br> </td>  
        <td><%= order.detail %></td> 
        <td><%= order.buyer.name %></td>  
        <td><%= order.created_at.strftime("%B %-d, %Y") %></td>  
        
      </tr>
    <% end %>
</table>


  <% if user_signed_in? %>
    <%= link_to 'Post a book!', new_listing_path, class: "btn btn-success" , data: { disable_with: "Loading..." } %>
  <% end %>

