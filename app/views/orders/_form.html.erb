<%= form_for([@listing, @order]) do |f| %>
  <% if @order.errors.any? %>
     <div id="error_explanation" class="alert alert-danger alert-dismissable">
     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
     <h4><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h4>
   
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group has-error has-feedback">
    <label class="control-label" for="inputError2"><%= f.label "Message" %><br></label>
   <%= f.text_area :detail,  class: "form-control", rows: "3" %>
