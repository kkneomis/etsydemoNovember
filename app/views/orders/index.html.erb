<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.detail %></td>
        <td><%= link_to 'Show', listing_orders_path %></td>
        <td><%= link_to 'Edit', edit_listing_orders %></td>
        <td><%= link_to 'Destroy', listing_orders_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

