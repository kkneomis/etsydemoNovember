<div class="center">
  <h1> Search for a book and go! </h1>
    <div class="page-header">
      <h3>Search results for: "<%= params[:q] %>" </h3>
    </div>
    <div class="form-group">
      <%= form_tag search_path, :method => :get do %>
            <%= text_field_tag :q, params[:q] , class: "form-control", placeholder: "Search", data: { disable_with: params[:q] } %>
            <% end %>
    </div>
</div>

 <div class="center">
      <div class="form-group">
        <%= will_paginate @listings, :renderer => BootstrapPagination::Rails %>
      </div>
      <%= link_to 'Post a book!', new_listing_path, class: "btn btn-primary" %>
    </div>

  
 
  
<div class="center"> 

              <% @listings.each do |listing| %>
                
                  <div class="col-md-3">
       
    <div class="pic"><%=link_to image_tag(listing.image.url(:thumb)), listing %></div>

                    <div class="description"> 
                      <h4> <%= listing.name.upcase %></h4>
                        <p> <%= number_to_currency(listing.price) %></p>

                    </div> <!--- description --->
                   
                  </div> <!--- colmd3 ---> 
                
             <% end %>
        </div> <!--- row class --->
    
    <div class="center">       
      <%= will_paginate @listings, :renderer => BootstrapPagination::Rails %> <br/>
      <%= link_to 'Post a book!', new_listing_path, class: "btn btn-primary btn-lg" %>
    </div>