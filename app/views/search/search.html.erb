<div class="center">
  <h1> Search for a book and go! </h1>
    <div class="page-header">
      <h3>Search results for: "<%= params[:q] %>" </h3>
    </div>
    <div class="form-group">
      <%= form_tag search_path, :method => :get do %>
            <%= text_field_tag :q, params[:q] , class: "form-control", placeholder: "Search", data: { disable_with: params[:q] } %>
            <% end %>
    </div>
</div>

<div class="center"> 
  <h1> Books Recently Posted </h1> <br/>
        <% @listings.each_slice(4) do |list_group| %>
            <div class="row">
              <% list_group.each do |listing| %>
                
                  <div class="col-md-3">
       
    <div class="pic"><%=link_to image_tag(listing.image.url(:thumb)), listing %></div>

                    <div class="description"> 
                      <h4> <%= listing.name.upcase %></h4>
                        <p> <%= number_to_currency(listing.price) %></p>

                    </div> <!--- description --->
                   
                  </div> <!--- colmd3 ---> 
                
             <% end %>
        </div> <!--- row class --->
        <% end %>
    </div>      
    <div class="center">       
      <%= link_to 'Post a book!', new_listing_path, class: "btn btn-primary btn-lg" %>
    </div>
