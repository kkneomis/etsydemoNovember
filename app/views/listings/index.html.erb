<div class="container-fluid work" id="work">
	<div class="container">
		<div class="row" id="starts">
			<div class="col-md-12 col-sm-12 col-xs-12 work-list">
				<h2 class="text-center portfolio-text">Books for sale on campus</h2>
			</div>
		</div>
	</div>
</div>

  <input placeholder="Search" />

<div class="container " >
  <% @listings.each_slice(8) do |list_group| %>
    <div class="row">
    	<div class="col-md-12">
        
        <% list_group.each do |listing| %>
			     <div class="col-sm-6 col-md-2">
				<div class="thumbnail list" >
          <h4 class="text-center seller"><span class="label label-info"><%=listing.user.name%></span></h4>
					<%= link_to cl_image_tag(listing.image_url(:thumbnail)), listing %>
					<div class="caption">
						<div class="row">
							<div class="col-md-12 col-xs-12 name">
								<p class="name"><%=listing.name%></p>
							</div>
							<div class="col-md-12 col-xs-12 price">
								<p>
								<label><%= number_to_currency(listing.price) %></label></p>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
                <%= link_to "View details", listing, class:"btn btn-success btn-block" %>
						</div>

						<p> </p>
					</div>
				</div>
			</div>
        
        
      </div> 
        <% end %>
	  </div>
 
</div>
<% end %> 
</div>


<style>
  .name {
    overflow: hidden;
  }
</style>