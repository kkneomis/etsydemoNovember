<div class="jumbotron">
  <h1> Books being sold by students to students at Howard University </h1>
  <h2> Scroll through to buy and sell textbooks, and save money! </h2>
</div>


<div class="row">
  <div class="form-group">
    <%= form_tag listings_path, :method => :get do %>
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
    <% end %>
  </div>
</div>


<div class="center"> 
      <div class="row">
        <% @listings.each do |listing| %>
            <div class="col-md-3">
             <%= link_to image_tag(listing.image.url(:thumb)), listing %>
              <div class="description"> 
                <h3 class="bg-primary">Title: <%= listing.name %></h3>
                <div class="bg-info">
                  <p>Author: <%= listing.author %></p>
                <p>Course: <%= listing.course %></p>
                <p>Price: <%= number_to_currency(listing.price) %></p>
                <p>Condition: <%= listing.condition %></p>
                </div>
                <p class="bg-warning">Owned by:<%= listing.user.name %>  
                  <% if (current_user != listing.user) %>
                  <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"> </span>
                  <% end %>
                </p>
                
                
              </div>
            </div>
        <% end %>
       </div>


<div class="center"> 
    <div class= "form-group">
      <% if user_signed_in? %>
        <%= link_to 'Post a book!', new_listing_path, class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
</div>


 </div>