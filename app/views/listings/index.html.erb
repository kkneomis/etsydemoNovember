<div class="jumbotron">
  <h1> MeccaShare </h1>
  <h2> Books sold by students to students at Howard University </h2>
</div>





<div class="row">
  <div class="form-group">
    <%= form_tag listings_path, :method => :get do %>
    <%= text_field_tag :q, params[:q] , class: "form-control", placeholder: "Search" %>
    <% end %>
  </div>
</div>


<div class="center"> 
     
        <% @listings.each_slice(4) do |list_group| %>
            <div class="row">
              <% list_group.each do |listing| %>
              
            <div class="col-md-3">
             <%= link_to image_tag(listing.image.url(:thumb)), listing %>
              <div class="description"> 
                <h3> <%= listing.name %></h3>
                
                <div class="bg-info">
                <p> <%= listing.course %></p>
                  <p> <%= number_to_currency(listing.price) %></p>
                </div>  <!--- listing info --->
  
                <p class="bg-warning"> Owned by: <%= listing.user.name %>  
                  <% if (current_user == listing.user) %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true"> </span>
                  <% end %>
                </p>
              
              </div> <!--- description --->
  
            </div> <!--- colmd3 --->   
             <% end %>
        </div> <!--- row class --->
        <% end %>
       </div>


<div class="center"> 
    <div class= "form-group">
      <% if user_signed_in? %>
        <%= link_to 'Post a book!', new_listing_path, class: "btn btn-success btn-lg" %>
      <% end %>
    </div>
</div>


 </div>