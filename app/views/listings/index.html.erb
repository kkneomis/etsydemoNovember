<div class="container-fluid work" id="work">
	<div class="container">
		<div class="row" id="starts">
			<div class="col-md-12 col-sm-12 col-xs-12 work-list">
				<h2 class="text-center portfolio-text">Books for sale on campus</h2>
			</div>
		</div>
	</div>
</div>

 <div class="search"><%= form_tag(listings_path, :method => "get", id: "search-form") do %>
                      <%= text_field_tag :search, params[:search], class:"form-control", placeholder: "Search . . ." %>
                        <button class="btn btn-primary" type="submit">Search</button>
                      <% end %>
                    </div>

<div class="container items" >
  <% @listings.each_slice(4) do |list_group| %>
    <div class="row">
    	<div class="col-md-12">
        
        <% list_group.each do |listing| %>
			     <div class="col-sm-6 col-md-3">
				<div class="thumbnail" >
          <h4 class="text-center seller"><span class="label label-info"><%=listing.user.name%></span></h4>
          <%=  cl_image_tag(listing.image_url(:thumbnail)) %>
					<div class="caption">
						<div class="row">
							<div class="col-md-12 col-xs-12 ">
								<p ><%=listing.name%></p>
							</div>
							<div class="col-md-12 col-xs-12 ">
								<p>
								<label><%= number_to_currency(listing.price) %></label></p>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
                <%= link_to "View details", listing, class:"btn btn-success btn-block" %>
						</div>

						<p> </p>
					</div>
				</div>
			</div>
        
        
      </div> 
        <% end %>
	  </div>
 
</div><br>
<% end %> 
</div>


