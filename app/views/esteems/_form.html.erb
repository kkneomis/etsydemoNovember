<%= form_for(@esteem) do |f| %>
  <% if @esteem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@esteem.errors.count, "error") %> prohibited this esteem from being saved:</h2>

      <ul>
      <% @esteem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class:"form-control", required: true, placeholder:"Enter your Name" %>
  </div>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title , class:"form-control", required: true, placeholder:"Enter the book title and/or ISBN"%>
  </div>
  <div class="form-group">
    <%= f.label :condition %><br>
    <%= f.text_field :condition, class:"form-control" , required: true, placeholder:"Describe the book's condition"%>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class:"form-control", required: true , placeholder:"Enter your email address"%>
  </div>
  <div class="form-group">
    <%= f.label :comment%><br>
    <%= f.text_area :comment, class:"form-control" , placeholder:"Leave any additional comments here" %>
  </div>
  <div class="form-group">
    <button name="submit" type="submit" class="btn btn-primary btn-lg" id="submit"> Submit</button>
  </div>
<% end %>
